<form action="/admin/posts/edit/{{post.id}}?_method=PUT" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input name="title" type="text" placeholder="Enter title" id="title" class="form-control" value="{{post.title}}">
    </div>

     <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status" class="form-control">
            {{#select post.status}}
            <option value="public">public</option>
            <option value="private">private</option>
            <option value="draft">draft</option>
            {{/select}}
        </select>
    </div>
    

    <div class="form-check">
        <label for="allowcomments" class="form-check-label">
        <input type="checkbox" name="allowcomments" {{#if post.allowcomments}} checked = "checked" {{/if}} id="allowcomments" class="form-check-input">
        allow Comments
        </label>
    </div>

    <div class="form-group">
        <label for="body">Description</label>
        <textarea type="text" name="body" cols="25" rows="5" class="form-control" id="body">{{post.body}}</textarea>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>

</form>