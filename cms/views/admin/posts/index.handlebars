<h1>All posts</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Status</th>
            <th>Date</th>
            <th>Time</th>
            <th>Allow Comments</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
             <td>{{_id}}</td>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{date}}</td>
            <td>{{time}}</td>
            <td>{{allowcomments}}</td>
            <td><a href="/admin/posts/edit/{{_id}}" class="btn btn-info">Edit</a></td>
            <td>
                <form action="/admin/posts/{{_id}}?_method=DELETE" method="post">
                
                <button type="submit" class="btn btn-danger">Delete</button>
                
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>


